{
  "name": "google-assistant",
  "version": "1.0.0",
  "description": "Google Assistant service",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/maximeallanic/google-assistant"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "publish": "electron-builder --publish onTag",
    "release": "build"
  },
  "author": "Maxime Allanic <maxime@allanic.me> (https://allanic.me)",
  "license": "ISC",
  "devDependencies": {
    "electron": "^13.6.6"
  },
  "dependencies": {
    "animejs": "^3.2.0",
    "app-root-dir": "^1.0.2",
    "auto-launch": "^5.0.5",
    "castv2-player": "^2.1.0",
    "electron-get-location": "^1.0.1",
    "electron-log": "^4.1.1",
    "electron-store": "^5.1.1",
    "electron-updater": "^4.2.5",
    "google-assistant": "^0.6.2",
    "jquery": "^3.5.0",
    "lodash": "^4.17.15",
    "node-record-lpcm16": "^1.0.1",
    "open": "^7.0.3",
    "q": "^1.5.1",
    "speaker": "^0.5.1"
  },
  "build": {
    "productName": "Google Assistant",
    "copyright": "Copyright Â© year ${author}",
    "appId": "com.maximeallanic.google-assistant",
    "npmArgs": [
      "--mpg123-backend=openal"
    ],
    "extraFiles": [
      "./build/icon/**",
      "./binary/**"
    ],
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "dmg": {
      "title": "Google Assistant"
    },
    "mac": {
      "artifactName": "${productName}.${ext}",
      "target": "dmg",
      "identity": null,
      "category": "public.app-category.utilities",
      "icon": "build/icon/mac.icns",
      "darkModeSupport": true,
      "type": "distribution"
    }
  }
}
